<%@plots.each do |plot|%>
    <section id="plot-<%= plot.id %>">
        <h3>Plot number: <%=plot.number%></h3>
        <ul>
            <%plot.plants.each do |plot_plant|%>
                <li><%=plot_plant.name%>
                <br>
                <%= button_to "Remove #{plot_plant.name}", plot_plant_path(plot.id, plot_plant.id), method: :delete%></p>
                </li>
            <%end%>
        </ul>
    </section>
<%end%>